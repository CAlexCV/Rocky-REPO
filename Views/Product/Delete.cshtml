@model Product;

<form asp-action="Delete" method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-primary pl-3">Delete Product</h2>
        </div>
        <hr />
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4"><label asp-for="Name"></label></div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4"><label asp-for="Price"></label></div>
                    <div class="col-8">
                        <input asp-for="Price" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4"><label asp-for="Description"></label></div>
                    <div class="col-8">
                        <textarea asp-for="Description" class="form-control summernote"></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4"><label asp-for="CategoryId"></label></div>
                    <div class="col-8">
                        <input asp-for="Category.Name" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4"><label asp-for="ApplicationTypeId"></label></div>
                    <div class="col-8">
                        <input asp-for="ApplicationType.Name" class="form-control" disabled />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 row offset-4">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a class="btn btn-success w-100" asp-action="Index"><i class="fa-solid fa-arrow-right-from-bracket"></i></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <img src="@WC.PartImagePath@Model.Image" style="width:100%; border:solid #ff0000; border-radius:5px" />
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                disable: true
            });
        });
    </script>
}